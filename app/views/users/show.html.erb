 <div class="container mt-4">
    <div class="row">
      <div class="text-center ">
      <h2 class="mb-4 "><%= @user.username.capitalize %>'s profile</h2>
      </div>
    </div>
    <%= gravatar_for @user , size: 200 %>

    <div class="text-center mt-4">
    <% if logged_in? && @user == current_user %>
      <%= link_to "Edit your profile", edit_user_path(@user) , class: "btn btn-outline-info" %>
    <% end %>
    </div>
    <% if @user.recipes.present?%>
    <h3 class="mt-4 text-center">List of recipes created by you</h3>
    <%= render 'recipes/recipes' %>
    <% else %>
    <h3 class="mt-4 text-center">There is no recipes created by you</h3>
    <% end %>
</div>

<br>

