<% if notice.present? %>
  <div class="container">
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
      <p class="text-success" style="margin-bottom: 0;"><%= notice %></p>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
<% end %>


<div class="container mt-4 ">
  <div class="row">
    <div class="text-center">
      <h2 class="mb-5">Login page</h2>
    </div>
  </div>
  
  <div class="mt-5">
  <%# :session. This means the form will be associated with the session data. %>
  <%= form_with(scope: :session, url: login_path, class: "card w-50 mx-auto") do |form| %>
    <div class="card-body shadow rounded">
      <%= render 'shared/errors', obj: @user %>
      <div class="mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.email_field :email, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, class: "form-control" %>
      </div>
      <div class="text-center">
        <%= form.submit "Log in", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>

</div>



