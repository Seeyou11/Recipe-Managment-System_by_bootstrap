<% if notice.present? %>
  <div class="container">
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
      <p class="text-success" style="margin-bottom: 0;"><%= notice %></p>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
<% end %>


<div class="fluid-container">
  <div class="card">
    <div class="mt-4">
      <h1 class="text-center ">LISTING ALL RECIPES</h1>
    </div>
    <div class="mt-3">
      <%= render 'recipes' %>
    </div>    
  </div>
</div>