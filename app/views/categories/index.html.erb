
<div class="fluid-container">
    <div class="mt-4">
      <h1 class="text-center ">LISTING ALL CATEGORIES</h1>
    </div>
    <div class="mt-4">
      <div class="flickr_pagination">
        <%= will_paginate @categories, container: false %>
      </div>

      <div class="container mt-4">
        <div class="row">
          <% @categories.each do |category| %>
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
              <div class="card text-center shadow bg-white rounded ">
                <div class="card-body">
                  <h5 class="card-title"><%= link_to category.name, category_path(category) %></h5>
                  <p class="card-text"><%= pluralize(category.recipes.count, "recipes") %></p>
                </div>

                <div class="card-footer text-muted">
                  Created <%= time_ago_in_words(category.created_at) %>,
                  edited <%= time_ago_in_words(category.updated_at) %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

    </div>    
</div>