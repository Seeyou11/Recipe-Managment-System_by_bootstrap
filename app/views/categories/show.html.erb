


<div class="container mt-4">
  <div class="row">
    <div class="text-center">
      <h2 class="mb-4 category-name">CATEGORY: <%= @category.name %></h2>
      <div class="text-center mt-4 edit-button">
        <% if logged_in? && current_user.admin? %>
          <%= link_to "Edit category name", edit_category_path(@category), class: "btn btn-outline-info" %>
        <% end %>
      </div>
      <h3 class="mt-4 text-center">List of recipes available in this category</h3>
      <div class="recipes">
        <%= render 'recipes/recipes' %>
      </div>
    </div>
  </div>
</div>







